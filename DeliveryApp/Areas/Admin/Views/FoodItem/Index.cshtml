@model List<FoodItem>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				FoodItem List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="FoodItem" asp-action="Upsert" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New FoodItem
			</a>

		</div>
	</div>
<table id="tblData" class="table table-bordered table-striped" style="width: 100%">
	<thead>
	<tr>
		<th>
			FoodItem Name
		</th>
		<th>
			Description
		</th>
		<th>
			Price
		</th>
		<th>
			Category
		</th>
		<th></th>
	</tr>
	</thead>
</table>
</div>

@section Scripts{
	<script src="~/js/foodItem.js"></script>
}