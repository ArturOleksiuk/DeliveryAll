@model RoleManagmentVM

<form method="post">
	<input asp-for="ApplicationUser.Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Manage User Role</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3 row p-1">
			<label asp-for="ApplicationUser.Name" class="p-0"></label>
			<input asp-for="ApplicationUser.Name" class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn  btn-outline-primary form-control">Update Role</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-action="Index" class="btn btn-outline-primary  form-control">
					Back to List
				</a>
			</div>
		</div>
	</div>

</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}